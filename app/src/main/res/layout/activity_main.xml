<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101114"
    android:backgroundTint="#131316"
    tools:context=".MainActivity"
    android:id="@+id/drawerlayout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationview"
        app:headerLayout="@layout/slide"
        app:menu="@menu/side_menu"
        android:layout_gravity="start"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="DataBase Management System"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="#F4EED9"
        android:layout_marginBottom="10dp"
        app:titleMarginStart="10dp"
        android:paddingLeft="20dp"
        tools:ignore="MissingConstraints"
        app:titleTextColor="@color/black"/>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F4EED9"
                android:orientation="vertical">
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:contentDescription="@string/fab_transformation_scrim_behavior">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/img_4" />

                    </LinearLayout>
                </HorizontalScrollView>

                <ScrollView
                    android:id="@+id/scrollView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F4EED9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="10dp"
                            android:paddingTop="20dp"
                            android:paddingEnd="10dp"
                            android:text="Welcome to the University data Management of the Maulana Azad National institute of Technology \n\n\n\n For Student Data related Activity click on the Student Button Below"
                            android:textColor="#141313"
                            android:textSize="17sp" />

                        <Button
                            android:id="@+id/button"
                            android:layout_width="330dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/student"
                            android:textColor="#F4EED9" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:text="   For Professor Data related Activity Click on the Professor Button Below"
                            android:textColor="#141313"
                            android:textSize="17sp"
                            />

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="330dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="10dp"
                            android:text="Professor"
                            android:textColor="#F4EED9" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="10dp"
                            android:text="   The Course and Department table are the University Data so you cannot Modified it.."
                            android:textColor="#141313"
                            android:textSize="17sp"
                            />

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="330dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="10dp"
                            android:text="Course"
                            android:textColor="#F4EED9" />

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="330dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Department"
                            android:textColor="#F4EED9" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\n\n" />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
      </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>